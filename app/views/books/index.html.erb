<div class="index">
	<h1>Books</h1>
	<table>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		<% @books.each do |book| %>
			<tr class="table">
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show', book_path(book.id) %></td>
				<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
				<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</table>

	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
   			<p class="error">error!!!!</p>
		<% end %>
		<% if @book.errors.any? %>
 			 <div class="alert alert-warning">
   				 <ul>
     				 <% @book.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
     				 <% end %>
    			</ul>
  			</div>
		<% end %>
		<h5>Title</h5>
		<%= f.text_field :title %>
		<h5>Body</h5>
		<%= f.text_area :body %>
		<%= f.submit 'Create Book' %>
	<% end %>
</div>