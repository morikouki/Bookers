<div class="edit">
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
   			<p class="error">error!!!!</p>
		<% end %>
		<% if @book.errors.any? %>
 			 <div class="alert alert-warning">
   				 <ul>
     				 <% @book.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
     				 <% end %>
    			</ul>
  			</div>
		<% end %>
		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Body</h4>
		<%= f.text_area :body %>
		<%= f.submit 'Update Book' %>
	<% end %>
	<p><%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %></p>
</div>